<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
  </configSections>
  <connectionStrings>
    <add name="FrontendDbContext" connectionString="Data Source=(localdb)\.\FrontendDB_SHARED;Initial Catalog=FrontendDb1;Integrated Security=SSPI;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="log.level" value="Debug" />
    <add key="azure.ignore.cert.errors" value="false" />
    <add key="SiliconClientId" value="dev-silicon" />
    <add key="SiliconClientSecret" value="dev-silicon-secret" />
    <add key="scheme" value="https" />
    <add key="hostname" value="local.frontend.api.nancy" />
    <add key="auth.server" value="local.identityserver:5000" />
    <add key="entrypoint.server" value="local.entrypoint:9000" />
    <add key="websocket.port" value="9001" />
    <add key="websocket.scheme" value="wss" />
    <add key="websocket.server.hostname" value="local.entrypoint" />
  </appSettings>
  <!--
